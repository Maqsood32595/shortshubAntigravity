{
    "name": "shortshub-hybrid",
    "version": "1.0.0",
    "scripts": {
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "server": "nodemon server/index.js",
        "client": "cd client && npm start",
        "build": "npm run build:hybrid && npm run build:client",
        "build:hybrid": "node .feature-system/compiler/hybrid-compiler.js",
        "build:client": "cd client && npm run build",
        "feature:sync": "node .feature-system/compiler/index.js",
        "feature:sync-all": "npm run build:hybrid",
        "feature:disable": "node scripts/feature-disable.js",
        "feature:enable": "node scripts/feature-enable.js",
        "feature:health": "node scripts/feature-health.js",
        "layout:validate": "node scripts/validate-layouts.js",
        "layout:list": "ls -la schema/layouts/",
        "test": "jest",
        "test:integration": "jest --config jest.integration.config.js"
    },
    "dependencies": {
        "@google-cloud/storage": "^7.17.3",
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "helmet": "^7.1.0",
        "js-yaml": "^4.1.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.20.0",
        "multer": "^1.4.5-lts.1",
        "pg": "^8.16.3"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "jest": "^29.7.0",
        "nodemon": "^3.0.2"
    }
}
